<div class="container">
    <div class="table-responsive-lg">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-success">
                <tr>
                    <th style = "width: 5%;">No</th>
                    <th style = "width: 25%;">Contact Name</th>
                    <th style = "width: 25%;">Contact Number</th>
                    <th style = "width: 25%;">Contact Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if(ContactsList.length) {
                    for(let i = 0; i < ContactsList.length; i++) { %>
                <tr> 
                    <td><%= i+1 %></td>
                    <td><%= ContactsList[i].contact_name %></td> 
                    <td><%= ContactsList[i].contact_number %></td> 
                    <td><%= ContactsList[i].contact_email %></td> 
                    <td>
                        <div class="action-buttons">
                            <a href="/contacts-list/edit/<%= ContactsList[i]._id %>" class="btn btn-success btn-floating">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="/contacts-list/delete/<%= ContactsList[i]._id %>" class="btn btn-danger btn-floating btn-delete">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>  
                </tr>
                <% }  }else{ %>
                    <tr>  <td colspan="5">No record found</td>  </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
